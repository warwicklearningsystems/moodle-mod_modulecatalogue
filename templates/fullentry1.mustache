<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-5">{{ code }}: {{ name }}</h1>
        <h3 class="display-5"> Number of Credits: {{ creditValue }}</h3>
        <h4 class="display-5"> Academic Year: {{ academic_year }}</h4>
        <p class="lead"> Aims:</p>
        <tr>  {{ principal_aims }} </tr>
        <p class="lead"> Total Study Hours: {{ totalStudyHours }} </p>
        <p class="lead"> Syllabus </p>
        <p> {{ outlineSyllabus }}  </p>

        <p class="lead"> Assessments </p>

        <section>
            {{#assesmentGrplength0}} <p> {{ assesmentGrpname0 }} {{assesmentGrptype0}} {{ assesmentGrpweighting0 }}  Duration Exam: {{ assesmentGrplength0 }} Description: {{ assesmentGrpdescription0 }} </p> {{/assesmentGrplength0}}
            {{^assesmentGrplength0}} <td> <em> {{ assesmentGrpname0 }} &nbsp &nbsp </em> {{ assesmentGrpweighting1}} </td> {{/assesmentGrplength0}}

            {{#assesmentGrplength1}} <p> {{ assesmentGrpname1 }} {{assesmentGrptype1}} <em> </em> {{ assesmentGrpweighting1 }} Description: {{ assesmentGrpdescription1 }} </p> {{/assesmentGrplength1}}
            {{^assesmentGrplength1}} <td> <em> {{ assesmentGrpname1 }} &nbsp &nbsp </em> {{ assesmentGrpweighting1}} </td> {{/assesmentGrplength1}}

            {{#assesmentGrplength2}} <p> {{ assesmentGrpname2 }} {{assesmentGrptype2}} <em> </em> {{ assesmentGrpweighting2 }} Description: {{ assesmentGrpdescription2 }} </p> {{/assesmentGrplength2}}
            {{^assesmentGrplength2}} <td> <em> {{ assesmentGrpname2 }} &nbsp &nbsp </em> {{ assesmentGrpweighting2}} </td> {{/assesmentGrplength2}}

            {{#assesmentGrplength3}} <p>  {{ assesmentGrpname3 }} {{assesmentGrptype3}} <em> </em> {{ assesmentGrpweighting3 }} Description: {{ assesmentGrpdescription3 }} </p> {{/assesmentGrplength3}}
            {{^assesmentGrplength3}} <td> <em> {{ assesmentGrpname3 }} &nbsp &nbsp </em> {{ assesmentGrpweighting3}} </td> {{/assesmentGrplength3}}

            {{#assesmentGrplength4}} <p>  {{ assesmentGrpname4 }} {{assesmentGrptype4}} <em> </em> {{ assesmentGrpweighting4 }} Description: {{ assesmentGrpdescription4 }} </p> {{/assesmentGrplength4}}
            {{^assesmentGrplength4}} <td> <em> {{ assesmentGrpname4 }} &nbsp &nbsp </em> {{ assesmentGrpweighting4}} </td> {{/assesmentGrplength4}}
        </section>

        <p class="lead">Subject Specific Skills</p>
        {{ subjectSpecificSkills}}
    </div>
</div>